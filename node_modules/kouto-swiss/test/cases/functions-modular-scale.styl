@import 'kouto-swiss'

div
    font-size: modular-scale( 16px, -2, 1.5 )
    font-size: modular-scale( 16px, -1, 1.5 )
    font-size: modular-scale( 16px, 0, 1.5 )
    font-size: modular-scale( 16px, 1, 1.5 )
    font-size: modular-scale( 16px, 2, 1.5 )

div
    font-size: modular-scale( 16px, -2, 1.618 )
    font-size: modular-scale( 16px, -1, 1.618 )
    font-size: modular-scale( 16px, 0, 1.618 )
    font-size: modular-scale( 16px, 1, 1.618 )
    font-size: modular-scale( 16px, 2, 1.618 )

div
    font-size: modular-scale( 16px, -2 )
    font-size: modular-scale( 16px, -1 )
    font-size: modular-scale( 16px, 0 )
    font-size: modular-scale( 16px, 1 )
    font-size: modular-scale( 16px, 2 )

div
    font-size: modular-scale( 16px, -2, ks-octave )
    font-size: modular-scale( 16px, -1, ks-octave )
    font-size: modular-scale( 16px, 0, ks-octave )
    font-size: modular-scale( 16px, 1, ks-octave )
    font-size: modular-scale( 16px, 2, ks-octave )

div
    font-size: modular-scale( 1em, -2, 1.5 )
    font-size: modular-scale( 1em, -1, 1.5 )
    font-size: modular-scale( 1em, 0, 1.5 )
    font-size: modular-scale( 1em, 1, 1.5 )
    font-size: modular-scale( 1em, 2, 1.5 )
